<%= simple_format h(@team.name) %>

<h5>
  <strong>Name:</strong>
  <%= @team.name %>
</h5>
<h5>
  <strong>Teams users</strong>
  <%= link_to pluralize(@team.users.size, 'user'), team_users_path(:team_id => @team) %>
</h5>

<% if can? :create, User %>
    <%= link_to 'Add New User', new_team_user_path(:team_id => @team) %>
<% end %>
<%= link_to 'Edit', edit_team_path(@team) %> |

